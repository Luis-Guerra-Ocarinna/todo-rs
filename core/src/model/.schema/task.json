{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Record of a Task",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "./id.json/#/definitions/id"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "timer": {
            "type": [
                "null",
                "object"
            ],
            "properties": {
                "started": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "paused": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "ended": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "pattern": "\\d+ min"
                }
            }
        },
        "status": {
            "type": "string",
            "enum": [
                "Todo",
                "InProgress",
                "Done",
                "Paused"
            ]
        }
    },
    "required": [
        "title",
        "status"
    ]
}