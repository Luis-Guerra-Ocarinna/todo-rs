{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Record of a Board",
    "definitions": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
        },
        "task": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "timer": {
                    "type": [
                        "null"
                    ]
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "Todo",
                        "InProgress",
                        "Done",
                        "Paused"
                    ]
                }
            },
            "required": [
                "title",
                "status"
            ]
        }
    },
    "type": "object",
    "properties": {
        "id": {
            "$ref": "#/definitions/id"
        },
        "tasks": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/task"
            },
            "uniqueItems": true
        }
    }
}